<%- include("../partials/header") %>
<h1 class="text-center display-5 fw-bold mb-5">
  <%= shoppinglist.title %> Shoppinglist
</h1>

<form
  action="/shoppinglists/<%=shoppinglist._id%>?_method=PUT"
  method="POST"
  id="checkboxForm"
>
  <% shoppinglist.ingredients.forEach((ingredient) => { %>
  <ul class="list-group">
    <li class="list-group-item">
      <input <%= ingredient.checked ? 'checked' : '' %> class="form-check-input
      me-1" type="checkbox" name="ingredient" value="<%= ingredient.name %>"
      aria-label="ingredient" /> <%= ingredient.name %>
    </li>
  </ul>
  <% }); %>
  <div class="saveBtn">
    <button type="submit" class="btn btn-success">Save</button>
  </div>
</form>

<%- include("../partials/footer") %>
