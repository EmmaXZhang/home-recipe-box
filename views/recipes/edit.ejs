<%- include("../partials/header")%>

<div class="px-4 py-5 my-5 text-center">
  <h1 class="display-5 fw-bold">Edit Recipe</h1>
  <div class="col-lg-6 mx-auto">
    <p class="lead">
      Create your amazing recipies and share with family and friends.
    </p>
  </div>
</div>

<div class="row justify-content-center">
  <div class="col-8">
    <form action="/recipes/<%=recipe._id%>?_method=PUT" method="POST">
      <div class="row g-3">
        <div class="col-12">
          <label for="title" class="form-label">Recipe Name</label>
          <input type="text" name="title" class="form-control" value="<%=recipe.title%>" />
        </div>

        <div class="col-12">
          <label for="description" class="form-label">Description</label>
          <textarea
            name="description"
            class="form-control"
            cols="30"
            rows="4"
            required
          ><%=recipe.description%></textarea>
        </div>

        <div class="col-12">
          <label for="preparationTime" class="form-label"
            >Preparation Time</label
          >
          <input
            type="number"
            name="preparationTime"
            class="form-control"
            value="<%=recipe.preparationTime%>"
            required
          />
        </div>

        <div class="col-12">
          <label for="cookingTime" class="form-label">Cooking Time</label>
          <input
            type="number"
            name="cookingTime"
            class="form-control"
            value="<%=recipe.cookingTime%>"
            required
          />
        </div>

        <div class="col-12">
          <label for="category">Select Category</label>
          <select class="form-select form-control" name="category">
            <option value="Breakfast" <%= recipe.category === 'Breakfast' ? 'selected' : '' %>>Breakfast</option>
            <option value="Lunch" <%= recipe.category === 'Lunch' ? 'selected' : '' %>>Lunch</option>
            <option value="Dinner" <%= recipe.category === 'Dinner' ? 'selected' : '' %>>Dinner</option>
          </select>
        </div>

        <div class="col-12">
          <label for="servering" class="form-label">Serving Number</label>
          <input type="number" name="serving" class="form-control" value="<%=recipe.serving%>" required />
        </div>

        <div class="col-12">
          <label for="category">Difficulty</label>
          <select class="form-select form-control" name="difficulty">
            <option value="Easy" <%= recipe.difficulty === 'Easy' ? 'selected' : '' %>>Easy</option>
            <option value="Medium" <%= recipe.difficulty === 'Medium' ? 'selected' : '' %>>Medium</option>
            <option value="Difficult" <%= recipe.difficulty === 'Difficult' ? 'selected' : '' %>>Difficult</option>
          </select>
        </div>

        <div class="col-12">
            <label for="name" class="form-label">Ingredients</label><br />
            <small>Example: 1 x Egg</small>
            <div class="ingredientList">
              <% recipe.ingredients.forEach(function(ingredient) { %>
                <div class="ingredientDiv">
                  <input type="text" name="ingredients" class="form-control" value="<%= ingredient %>" />
                </div>
              <% }); %>
            </div>
          </div>

        <div class="col-12">
          <button
            type="button"
            class="btn btn-outline-primary"
            id="addIngredient"
          >
            + Lines
          </button>
        </div>

        <div class="col-12">
          <label for="name" class="form-label">Instructions</label><br />
          <small>Example: Cook gnocchi</small>
          <div>
            <div class="mb-1">
              <input type="text" name="instruction" class="form-control" value="<%=recipe.instruction%>"/>
            </div>
          </div>
        </div>

        <div class="col-12">
          <button type="submit" class="btn btn-primary">Update Recipe</button>
        </div>
      </div>
    </form>
  </div>
</div>
<%- include("../partials/footer")%>
