<%- include("../partials/header")%>

<div class="px-4 py-5 my-5 text-center">
  <h1 class="display-5 fw-bold">Submit Recipe</h1>
  <div class="col-lg-6 mx-auto">
    <p class="lead">
      Create your amazing recipies and share with family and friends.
    </p>
  </div>
</div>

<div class="row justify-content-center">
  <div class="col-8">
    <form action="/recipes" enctype="multipart/form-data" method="POST">
      <div class="row g-3">
        <div class="col-12">
          <label for="title" class="form-label">Recipe Name</label>
          <input type="text" name="title" class="form-control" required />
        </div>

        <div class="col-12">
          <label for="description" class="form-label">Description</label>
          <textarea
            name="description"
            class="form-control"
            cols="30"
            rows="4"
            required
          ></textarea>
        </div>

        <div class="col-12">
          <label for="image">Image</label>
          <input
            type="file"
            class="form-control"
            name="image"
            accept="image/*"
          />
        </div>

        <div class="col-12">
          <label for="preparationTime" class="form-label"
            >Preparation Time</label
          >
          <input
            type="number"
            name="preparationTime"
            class="form-control"
            required
          />
        </div>

        <div class="col-12">
          <label for="cookingTime" class="form-label">Cooking Time</label>
          <input
            type="number"
            name="cookingTime"
            class="form-control"
            required
          />
        </div>

        <div class="col-12">
          <label for="category">Select Category</label>
          <select class="form-select form-control" name="category">
            <option selected>Select Category</option>
            <option value="Breakfast">Breakfast</option>
            <option value="Lunch">Lunch</option>
            <option value="Dinner">Dinner</option>
          </select>
        </div>

        <div class="col-12">
          <label for="servering" class="form-label">Serving Number</label>
          <input type="number" name="serving" class="form-control" required />
        </div>

        <div class="col-12">
          <label for="category">Difficulty</label>
          <select class="form-select form-control" name="difficulty">
            <option selected>Select Difficulty</option>
            <option value="Easy">Easy</option>
            <option value="Medium">Medium</option>
            <option value="Difficulty">Difficulty</option>
          </select>
        </div>

        <div class="col-12">
          <label for="name" class="form-label">Ingredients</label><br />
          <small>Example: 1 x Egg</small>
          <div class="ingredientList">
            <div class="ingredientDiv">
              <input type="text" name="ingredients" class="form-control" />
            </div>
          </div>
        </div>

        <div class="col-12">
          <button
            type="button"
            class="btn btn-outline-primary"
            id="addIngredient"
          >
            + Lines
          </button>
        </div>
        <div class="col-12">
          <label for="name" class="form-label">Instructions</label><br />
          <small>Example: Cook gnocchi</small>
          <div>
            <div class="mb-1">
              <textarea
                name="instruction"
                class="form-control"
                cols="30"
                rows="4"
                required
              ></textarea>
            </div>
          </div>
        </div>

        <div class="col-12">
          <button type="submit" class="btn btn-primary">Add Recipe</button>
        </div>
      </div>
    </form>
  </div>
</div>
<p><%=errMsg%></p>
<%- include("../partials/footer")%>
