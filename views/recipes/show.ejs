<%- include("../partials/header")%>

<div class="row g-10">
  <div class="col-12 col-md-12">
    <div class="recipeShowTop row">
      <div class="col-md">
        <img
          src="<%=recipe.image%>"
          class="img-fluid sticky-top"
          style="top: 20px"
          alt="foodimage"
        />
      </div>

      <div class="col-md">
        <h1 class="display-5 fw-bold mb-3 text-center"><%- recipe.title %></h1>
        <!-- other info -->
        <ul class="lead">
          <li>Preparation Time: <%=recipe.preparationTime%> min</li>
          <li>Cooking Time: <%=recipe.cookingTime%> min</li>
          <li>Category: <%=recipe.category%></li>
          <li>Serving: <%=recipe.serving%></li>
          <li>Difficulty: <%=recipe.difficulty%></li>
        </ul>
      </div>
    </div>

    <!-- testing -->
    <div class="row">
      <!-- Instructions -->
      <div class="col-sm-6">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">Cooking Instructions</h5>
            <p class="card-text"><%= recipe.instruction %></p>
          </div>
        </div>
      </div>
      <!-- Ingredients -->
      <div class="col-sm-6">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">Ingredients</h5>
            <ul class="list-group list-group-flush">
              <% recipe.ingredients.forEach(function(i){ %>
              <li class="list-group-item"><%= i %></li>
              <% }) %>
            </ul>
            <!-- retrieve the recipe ingredients-->
            <form method="POST" action="/shoppinglists">
              <!-- get recipe id, by passing "name" property + value -->
              <input
                type="hidden"
                id="recipeId"
                name="recipeId"
                value="<%=recipe._id%>"
              />
              <button type="submit" class="btn btn-secondary btn-sm">
                Create Shoplist
              </button>
            </form>
          </div>
        </div>
      </div>

      <div class="recipeShowReview">
        <div class="card col-sm-6">
          <h5 class="card-header">Reviews</h5>
          <div class="card-body">
            <form action="/recipes/<%= recipe._id %>/reviews" method="POST">
              <div class="mb-3">
                <label for="exampleFormControlTextarea1" class="form-label"
                  >Review</label
                >
                <textarea
                  class="form-control"
                  id="exampleFormControlTextarea1"
                  rows="3"
                ></textarea>
              </div>
              <div class="mb-3">
                <select class="form-select" aria-label="Default select example">
                  <option selected>Select Rating</option>
                  <option value="1">1</option>
                  <option value="2">2</option>
                  <option value="3">3</option>
                  <option value="4">4</option>
                  <option value="5">5</option>
                </select>
                <button type="submit" class="btn btn-secondary btn-sm mt-4">
                  Add Review
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<%- include("../partials/footer")%>
